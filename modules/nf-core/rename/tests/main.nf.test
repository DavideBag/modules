nextflow_process {
    name "Test Process RENAME"
    script "../main.nf"
    process "RENAME"
    config "./nextflow.config"
    tag "modules"
    tag "modules_nfcore"
    tag "rename"
    tag "renamingflash"

    test("rename-single_end") {
        when {
            process {
                """
                input[0] = [ [id:"null"], file("/workspace/modules/modules/nf-core/rename/tests/test_samples.tsv", checkIfExists: true)]
                input[1] = [
                    [ id:'test', single_end:false ], // meta map
                    file("/workspace/modules/modules/nf-core/rename/tests/test_samples.tsv", checkIfExists: true)
                    ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }

            )
        }

    }

}